{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2019", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "rootDir": "./src",
    "paths": {
      "@api": ["../blogus-sh-api/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
